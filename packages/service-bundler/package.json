{
  "name": "@dvsa/service-bundler",
  "version": "1.0.1-canary.1",
  "author": "DVSA",
  "license": "ISC",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf coverage dist && npm run clean:temp",
    "clean:temp": "rimraf api classes response",
    "format": "prettier . --write",
    "gitSecrets": "git secrets --scan && git log -p | scanrepo",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepare": "husky",
    "test": "",
    "test:coverage": "echo \"*** Tests to be added\"",
    "build:package": "npm run build",
    "prepublishOnly": "npm run build:package && cp -r ./dist/* . && rm -rf ./dist",
    "postpublish": "git clean -fd && npm run clean:temp"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "esbuild": "^0.23.0",
    "esbuild-plugin-typescript-decorators": "^0.1.0",
    "fs-extra": "^11.2.0",
    "zip-lib": "^1.0.4"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/bun": "^1.1.6",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.13.0",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "bun": "^1.1.20",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.2",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
