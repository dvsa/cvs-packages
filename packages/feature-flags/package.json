{
  "name": "@dvsa/cvs-feature-flags",
  "version": "0.14.1",
  "description": "Common package to be used in CVS to manage feature flags",
  "author": "DVSA",
  "license": "ISC",
  "files": [
    "profiles/**",
    "LICENSE",
    "package.json",
    "config.js",
    "index.js",
    "feature-flags.js"
  ],
  "keywords": [
    "typescript",
    "nodejs"
  ],
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf coverage dist && npm run clean:temp",
    "clean:temp": "rimraf profiles",
    "gitSecrets": "git secrets --scan . && git log -p -- . | scanrepo",
    "lint": "biome check src",
    "lint:fix": "npm run lint -- --write",
    "prepare": "husky",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build:package": "npm run build",
    "prepublishOnly": "npm run build:package && cp -r ./dist/* . && rm -rf ./dist",
    "postpublish": "git clean -fd && npm run clean:temp"
  },
  "dependencies": {
    "@aws-lambda-powertools/parameters": "^2.1.1",
    "lodash.merge": "^4.6.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@dvsa/biome-config": "0.1.0",
    "@aws-sdk/client-appconfigdata": "^3.624.0",
    "@smithy/util-stream": "^3.0.1",
    "@types/aws-lambda": "^8.10.131",
    "@types/jest": "^29.5.11",
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^20.13.0",
    "aws-sdk-client-mock": "^4.0.1",
    "aws-sdk-client-mock-jest": "^4.0.1",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.9",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,ts,mjs,css,md,ts,json}": "npm run lint:fix -- --no-errors-on-unmatched"
  }
}
