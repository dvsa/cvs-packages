{
  "name": "@dvsa/cvs-microservice-common",
  "version": "0.12.1",
  "description": "Common package to be used in CVS microservices",
  "author": "DVSA",
  "license": "ISC",
  "files": [
    "api/**",
    "classes/**",
    "response/**",
    "functions/**",
    "LICENSE",
    "package.json"
  ],
  "keywords": [
    "typescript",
    "nodejs"
  ],
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf coverage dist && npm run clean:temp",
    "clean:temp": "rimraf api classes response",
    "format": "prettier . --write",
    "gitSecrets": "git secrets --scan && git log -p | scanrepo",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepare": "husky",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build:package": "npm run build",
    "prepublishOnly": "npm run build:package && cp -r ./dist/* . && rm -rf ./dist",
    "postpublish": "git clean -fd && npm run clean:temp"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.592.0",
    "@aws-sdk/client-s3": "^3.592.0",
    "@aws-sdk/client-secrets-manager": "^3.592.0",
    "@aws-sdk/client-ses": "^3.592.0",
    "@aws-sdk/credential-providers": "^3.592.0",
    "@aws-sdk/lib-dynamodb": "^3.592.0",
    "@aws-sdk/util-dynamodb": "^3.540.0",
    "aws-xray-sdk": "^3.6.0",
    "class-transformer": "^0.5.1",
    "dayjs": "^1.11.10",
    "mybatis-mapper": "^0.8.0",
    "mysql2": "^3.9.7"
  },
  "devDependencies": {
    "@aws-lambda-powertools/parameters": "^2.0.2",
    "@aws-sdk/client-appconfigdata": "^3.592.0",
    "@types/aws-lambda": "^8.10.131",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.13.0",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "aws-sdk-client-mock": "^4.0.1",
    "aws-sdk-client-mock-jest": "^4.0.1",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.2",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run format"
    ]
  }
}
